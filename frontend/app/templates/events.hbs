



<div class="layout-row flex">
  <div class="flex-80">{{full-calendar events=model eventClick=(action 'openDialog') }}</div>
  <div class="layout-column flex">
    <div class="flex-wrap">
      <div class="aboutGallery" style="border-style: outset;">
        <h1 align="center">Upcoming Events</h1>
        {{#paper-list}}
          {{#each model as |item|}}
            {{#paper-item class="md-3-line"}}
                <div class="md-list-item-text">
                  <h3>{{item.title}}</h3>
                  <h4>{{item.start}}</h4>
                  <p>{{item.description}}</p>
                </div>
            {{/paper-item}}
          {{/each}}
        {{/paper-list}}
      </div>
    </div>
    <div class="flex">
      <div class="aboutGallery" style="border-style: outset;">
        <h1 align="center">Newsletter</h1>
        {{#paper-list}}
          {{#each model as |item|}}
            {{#paper-item class="md-3-line"}}
              <div class="md-list-item-text">

              </div>
            {{/paper-item}}
          {{/each}}
        {{/paper-list}}
      </div>
    </div>
  </div>
</div>



{{#if showDialog}}
  {{#paper-dialog class="flex-77" onClose=(action "closeDialog" "cancel") clickOutsideToClose=true}}
    {{#paper-toolbar}}
      {{#paper-toolbar-tools}}
        <h2>{{selectedEvent.title}}</h2>
        <span class="flex"></span>
        {{#paper-button iconButton=true onClick=(action "closeDialog" "cancel")}}{{paper-icon icon="close"}}{{/paper-button}}
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}

    {{#paper-dialog-content}}

      <div class="layout-row">Description: {{selectedEvent.description}}</div>
      <div class="layout-row">Start Time: {{selectedEvent.start}}</div>
      <div class="layout-row">End Time: {{selectedEvent.end}}</div>
      <div class="layout-row">Address: {{selectedEvent.address}}</div>


    {{/paper-dialog-content}}

    {{#paper-dialog-actions class="layout-row"}}
      <span class="flex"></span>
      {{#paper-button onClick=(action "closeDialog" "cancel")}}Cancel{{/paper-button}}
      {{#paper-button onClick=(action "closeDialog" "ok")}}OK{{/paper-button}}
    {{/paper-dialog-actions}}
  {{/paper-dialog}}
{{/if}}